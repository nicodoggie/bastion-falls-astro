---
import SidebarImage from './SidebarImage.astro';

const { item } = Astro.props;
---

<div
  class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 w-full max-w-full"
>
  {
    item.name && (
      <div class="flex justify-center items-center border-gray-600">
        <a href={item?.ddb} target="_blank" rel="noopener noreferrer">
          <h2 class="text-xl text-center font-bold text-gray-900 dark:text-white">
            {item.name}
          </h2>
        </a>
      </div>
      <hr class="border-gray-600">
    )
  }
  {item.image && <SidebarImage {...item.image} />}
  <div class="space-y-4">
    <dl class="divide-y divide-gray-200 dark:divide-gray-700">
      {
        item.details?.attunement !== undefined && (
          <div class="py-2">
            <dt class="text-lg font-semibold text-gray-700 dark:text-gray-300">
              Attunement
            </dt>
            <dd class="text-gray-600 dark:text-gray-400">
              {item.details.attunement ? 'Yes' : 'No'}
            </dd>
          </div>
        )
      }
      {
        item.details?.type !== undefined && (
          <div class="py-2">
            <dt class="text-lg font-semibold text-gray-700 dark:text-gray-300">
              Type
            </dt>
            <dd class="text-gray-600 dark:text-gray-400">
              {item.details.type}
            </dd>
          </div>
        )
      }
      {
        item.details?.rarity !== undefined && (
          <div class="py-2">
            <dt class="text-lg font-semibold text-gray-700 dark:text-gray-300">
              Rarity
            </dt>
            <dd class="text-gray-600 dark:text-gray-400">
              {item.details.rarity}
            </dd>
          </div>
        )
      }
      { 
        item.details?.weight !== undefined && (
          <div class="py-2">
            <dt class="text-lg font-semibold text-gray-700 dark:text-gray-300">
              Weight
            </dt>
            <dd class="text-gray-600 dark:text-gray-400">
              {item.details.weight}
            </dd>
          </div>
        )
      }
      {
        item.details?.value !== undefined && (
          <div class="py-2">
            <dt class="text-lg font-semibold text-gray-700 dark:text-gray-300">
              Value
            </dt>
            <dd class="text-gray-600 dark:text-gray-400">
              {item.details.value}
            </dd>
          </div>
        )
      }
    </dl>
  </div>


</div>
