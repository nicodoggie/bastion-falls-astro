---
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';
import ph1 from '@/assets/gen/placeholder-fantasy-1.png';
import ph2 from '@/assets/gen/placeholder-fantasy-2.png';
import ph3 from '@/assets/gen/placeholder-fantasy-3.png';
import ph4 from '@/assets/gen/placeholder-fantasy-4.png';

export interface Props {
  posts: CollectionEntry<'posts'>[];
  hideDraftsInitially?: boolean;
}

const { posts, hideDraftsInitially = false } = Astro.props;
const enc = encodeURIComponent;
---

<section class="space-y-8">
  {
    posts.map((post, i) => (
      <article
        data-draft={post.data.draft ? 'true' : 'false'}
        class={`border border-gray-800 rounded-lg overflow-hidden bg-gray-900/30 hover:bg-gray-900/50 hover:border-gray-700 transition-all duration-200 ${post.data.draft && hideDraftsInitially ? 'draft-post' : ''}`}
        style={post.data.draft && hideDraftsInitially ? 'display: none;' : ''}
      >
        <div
          class={`flex flex-col ${i % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} flex-nowrap items-stretch`}
        >
          {post.data.banner ? (
            <div class="w-64 flex-shrink-0">
              <Image
                src={post.data.banner.url}
                alt={post.data.banner.alt || post.data.title}
                class="w-full h-full object-cover"
                width={256}
                height={256}
              />
            </div>
          ) : (
            <div class="w-64 flex-shrink-0">
              <Image
                src={[ph1, ph2, ph3, ph4][i % 4]}
                alt="Placeholder banner"
                class="w-full h-full object-cover"
                width={256}
                height={256}
              />
            </div>
          )}
          <div class={`flex-1 p-6 ${i % 2 === 1 ? 'md:text-right' : ''}`}>
            <h2 class="text-2xl font-semibold mb-3">
              <a
                href={`/blog/${post.id}`}
                class="text-white hover:text-gray-300 transition-colors"
              >
                {post.data.title}
              </a>
            </h2>
            <div
              class={`flex flex-wrap gap-3 items-center text-sm text-gray-400 mb-4 ${i % 2 === 1 ? 'md:justify-end' : ''}`}
            >
              <time datetime={post.data.published.toISOString()}>
                {post.data.published.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              <div class="flex flex-wrap gap-2">
                {post.data.draft && (
                  <span class="px-2.5 py-1 text-xs font-medium bg-yellow-900/50 text-yellow-300 border border-yellow-700 rounded-md">
                    Draft
                  </span>
                )}
                {post.data.tags && post.data.tags.length > 0 && (
                  <>
                    {post.data.tags.map((t: string) => (
                      <a
                        href={`/blog/tags/${enc(t)}`}
                        class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 hover:bg-blue-200 dark:hover:bg-blue-800 transition-colors duration-200"
                      >
                        {t}
                      </a>
                    ))}
                  </>
                )}
              </div>
            </div>
            {post.data.description && (
              <p class="text-gray-300 mb-4">{post.data.description}</p>
            )}
            <a
              href={`/blog/${post.id}`}
              class="text-blue-400 hover:text-blue-300 font-medium transition-colors"
            >
              Read more â†’
            </a>
          </div>
        </div>
      </article>
    ))
  }
</section>
