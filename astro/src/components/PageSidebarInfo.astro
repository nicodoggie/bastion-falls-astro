---
import CharacterSidebarInfo from './CharacterSidebarInfo.astro';
import OrganizationSidebarInfo from './OrganizationSidebarInfo.astro';
import LocationSidebarInfo from './LocationSidebarInfo.astro';

const { entry } = Astro.locals.starlightRoute;
---

{
  (
    <>
      {entry.data?.character && (
        <CharacterSidebarInfo character={entry.data.character} />
      )}
      {entry.data?.organization && (
        <OrganizationSidebarInfo organization={entry.data.organization} />
      )}
      {entry.data?.location && (
        <LocationSidebarInfo location={entry.data.location} />
      )}
    </>
  )
}
