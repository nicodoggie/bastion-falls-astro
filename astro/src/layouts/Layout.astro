---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Bastion Falls Blog - Thoughts, poems, and other musings during the development of the Bastion Falls D&D campaign."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" type="application/xml" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Bastion Falls Blog</title>
    <script>
      // Simple dark mode toggle
      if (
        localStorage.getItem('theme') === 'dark' ||
        (!localStorage.getItem('theme') &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
    <style>
      /* Basic Tailwind-like styles */
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
        line-height: 1.6;
        background-color: #ffffff;
        color: #111827;
      }
      .dark body {
        background-color: #111827;
        color: #f9fafb;
      }
      .dark {
        color-scheme: dark;
      }

      /* Typography */
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-weight: 600;
        line-height: 1.25;
        margin-top: 0;
      }
      h1 {
        font-size: 2.25rem;
      }
      h2 {
        font-size: 1.875rem;
      }
      h3 {
        font-size: 1.5rem;
      }

      /* Prose styles */
      .prose {
        max-width: 65ch;
        color: #374151;
      }
      .dark .prose {
        color: #d1d5db;
      }
      .prose h1,
      .prose h2,
      .prose h3,
      .prose h4,
      .prose h5,
      .prose h6 {
        color: #111827;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      .dark .prose h1,
      .dark .prose h2,
      .dark .prose h3,
      .dark .prose h4,
      .dark .prose h5,
      .dark .prose h6 {
        color: #f9fafb;
      }
      .prose p {
        margin-bottom: 1.25rem;
      }
      .prose a {
        color: #2563eb;
        text-decoration: underline;
      }
      .dark .prose a {
        color: #60a5fa;
      }
      .prose ul,
      .prose ol {
        margin-bottom: 1.25rem;
        padding-left: 1.5rem;
      }
      .prose li {
        margin-bottom: 0.5rem;
      }
      .prose blockquote {
        border-left: 4px solid #e5e7eb;
        padding-left: 1rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #6b7280;
      }
      .dark .prose blockquote {
        border-left-color: #4b5563;
        color: #9ca3af;
      }
      .prose code {
        background-color: #f3f4f6;
        padding: 0.125rem 0.25rem;
        border-radius: 0.25rem;
        font-size: 0.875em;
      }
      .dark .prose code {
        background-color: #374151;
      }
      .prose pre {
        background-color: #f3f4f6;
        padding: 1rem;
        border-radius: 0.5rem;
        overflow-x: auto;
        margin: 1.5rem 0;
      }
      .dark .prose pre {
        background-color: #1f2937;
      }

      /* Utility classes */
      .max-w-4xl {
        max-width: 56rem;
      }
      .mx-auto {
        margin-left: auto;
        margin-right: auto;
      }
      .px-4 {
        padding-left: 1rem;
        padding-right: 1rem;
      }
      .py-8 {
        padding-top: 2rem;
        padding-bottom: 2rem;
      }
      .mb-8 {
        margin-bottom: 2rem;
      }
      .mb-4 {
        margin-bottom: 1rem;
      }
      .mb-2 {
        margin-bottom: 0.5rem;
      }
      .mb-3 {
        margin-bottom: 0.75rem;
      }
      .mb-12 {
        margin-bottom: 3rem;
      }
      .mt-8 {
        margin-top: 2rem;
      }
      .mt-2 {
        margin-top: 0.5rem;
      }
      .pt-8 {
        padding-top: 2rem;
      }
      .pb-8 {
        padding-bottom: 2rem;
      }
      .py-12 {
        padding-top: 3rem;
        padding-bottom: 3rem;
      }
      .space-y-8 > * + * {
        margin-top: 2rem;
      }
      .text-5xl {
        font-size: 3rem;
      }
      .text-4xl {
        font-size: 2.25rem;
      }
      .text-2xl {
        font-size: 1.5rem;
      }
      .text-xl {
        font-size: 1.25rem;
      }
      .text-lg {
        font-size: 1.125rem;
      }
      .text-sm {
        font-size: 0.875rem;
      }
      .font-bold {
        font-weight: 700;
      }
      .font-semibold {
        font-weight: 600;
      }
      .font-medium {
        font-weight: 500;
      }
      .text-center {
        text-align: center;
      }
      .text-gray-900 {
        color: #111827;
      }
      .text-gray-800 {
        color: #1f2937;
      }
      .text-gray-700 {
        color: #374151;
      }
      .text-gray-600 {
        color: #4b5563;
      }
      .text-gray-400 {
        color: #9ca3af;
      }
      .text-gray-300 {
        color: #d1d5db;
      }
      .text-white {
        color: #ffffff;
      }
      .text-blue-600 {
        color: #2563eb;
      }
      .text-blue-400 {
        color: #60a5fa;
      }
      .bg-gray-200 {
        background-color: #e5e7eb;
      }
      .bg-gray-700 {
        background-color: #374151;
      }
      .border-b {
        border-bottom-width: 1px;
      }
      .border-t {
        border-top-width: 1px;
      }
      .border-gray-200 {
        border-color: #e5e7eb;
      }
      .border-gray-700 {
        border-color: #374151;
      }
      .rounded {
        border-radius: 0.25rem;
      }
      .px-2 {
        padding-left: 0.5rem;
        padding-right: 0.5rem;
      }
      .py-1 {
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
      }
      .mr-2 {
        margin-right: 0.5rem;
      }
      .inline-block {
        display: inline-block;
      }
      .hover\:underline:hover {
        text-decoration: underline;
      }
      .hover\:text-blue-600:hover {
        color: #2563eb;
      }
      .hover\:text-blue-400:hover {
        color: #60a5fa;
      }
      .transition-colors {
        transition-property: color;
        transition-duration: 150ms;
      }
      .prose-lg {
        font-size: 1.125rem;
      }
      .max-w-none {
        max-width: none;
      }
      .dark\:prose-invert {
      }
      .dark\:text-white {
      }
      .dark\:text-gray-400 {
      }
      .dark\:text-gray-300 {
      }
      .dark\:text-gray-200 {
      }
      .dark\:bg-gray-700 {
      }
      .dark\:border-gray-700 {
      }
      .dark\:hover\:text-blue-400:hover {
      }

      @media (prefers-color-scheme: dark) {
        .dark\:text-white {
          color: #ffffff;
        }
        .dark\:text-gray-400 {
          color: #9ca3af;
        }
        .dark\:text-gray-300 {
          color: #d1d5db;
        }
        .dark\:text-gray-200 {
          color: #e5e7eb;
        }
        .dark\:bg-gray-700 {
          background-color: #374151;
        }
        .dark\:border-gray-700 {
          border-color: #374151;
        }
        .dark\:hover\:text-blue-400:hover {
          color: #60a5fa;
        }
        .dark\:prose-invert {
          color: #d1d5db;
        }
        .dark\:prose-invert h1,
        .dark\:prose-invert h2,
        .dark\:prose-invert h3,
        .dark\:prose-invert h4,
        .dark\:prose-invert h5,
        .dark\:prose-invert h6 {
          color: #f9fafb;
        }
        .dark\:prose-invert a {
          color: #60a5fa;
        }
        .dark\:prose-invert blockquote {
          border-left-color: #4b5563;
          color: #9ca3af;
        }
        .dark\:prose-invert code {
          background-color: #374151;
        }
        .dark\:prose-invert pre {
          background-color: #1f2937;
        }
      }

      .dark .dark\:text-white {
        color: #ffffff;
      }
      .dark .dark\:text-gray-400 {
        color: #9ca3af;
      }
      .dark .dark\:text-gray-300 {
        color: #d1d5db;
      }
      .dark .dark\:text-gray-200 {
        color: #e5e7eb;
      }
      .dark .dark\:bg-gray-700 {
        background-color: #374151;
      }
      .dark .dark\:border-gray-700 {
        border-color: #374151;
      }
      .dark .dark\:hover\:text-blue-400:hover {
        color: #60a5fa;
      }
      .dark .dark\:prose-invert {
        color: #d1d5db;
      }
      .dark .dark\:prose-invert h1,
      .dark .dark\:prose-invert h2,
      .dark .dark\:prose-invert h3,
      .dark .dark\:prose-invert h4,
      .dark .dark\:prose-invert h5,
      .dark .dark\:prose-invert h6 {
        color: #f9fafb;
      }
      .dark .dark\:prose-invert a {
        color: #60a5fa;
      }
      .dark .dark\:prose-invert blockquote {
        border-left-color: #4b5563;
        color: #9ca3af;
      }
      .dark .dark\:prose-invert code {
        background-color: #374151;
      }
      .dark .dark\:prose-invert pre {
        background-color: #1f2937;
      }
    </style>
  </head>
  <body>
    <nav
      class="border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900"
    >
      <div class="max-w-4xl mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a
            href="/blog"
            class="text-xl font-bold text-gray-900 dark:text-white"
          >
            Bastion Falls Blog
          </a>
          <div class="flex items-center space-x-4">
            <a
              href="/"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400"
            >
              Main Site
            </a>
            <button
              id="theme-toggle"
              class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400"
              aria-label="Toggle dark mode"
            >
              <span class="dark:hidden">🌙</span>
              <span class="hidden dark:inline">☀️</span>
            </button>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer
      class="border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 mt-16"
    >
      <div class="max-w-4xl mx-auto px-4 py-8">
        <div class="text-center text-gray-600 dark:text-gray-400">
          <p>&copy; 2024 Bastion Falls. All rights reserved.</p>
          <p class="mt-2">
            <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400"
              >Visit the main site</a
            >
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Dark mode toggle
      const themeToggle = document.getElementById('theme-toggle');
      themeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.contains('dark');
        if (isDark) {
          document.documentElement.classList.remove('dark');
          localStorage.setItem('theme', 'light');
        } else {
          document.documentElement.classList.add('dark');
          localStorage.setItem('theme', 'dark');
        }
      });
    </script>
  </body>
</html>
