{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@mdx-js/typescript-plugin"
      }
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
  },
  "mdx": {
    "checkMdx": true,
    "plugins": [
      ["remark-frontmatter", "yaml"]
    ]
  }
}
