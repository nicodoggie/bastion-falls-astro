{
  "name": "@bastion-falls/types",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./legacy": {
      "types": "./dist/legacy/index.d.ts",
      "import": "./dist/legacy/index.js"
    },
    "./legacy/*": {
      "types": "./dist/legacy/*.d.ts",
      "import": "./dist/legacy/*.js"
    }
  },
  "scripts": {
    "build": "tsup --dts",
    "dev": "tsup --dts --watch"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/*.ts",
      "src/legacy/index.ts",
      "src/legacy/*.ts"
    ],
    "format": "esm",
    "tsconfig": "tsconfig.json",
    "clean": true,
    "minify": false
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
