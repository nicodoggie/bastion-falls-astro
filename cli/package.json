{
  "name": "@bastion-falls/cli",
  "author": "",
  "description": "Stricli command line application",
  "license": "MIT",
  "type": "module",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "bin": {
    "__cli_bash_complete": "dist/bash-complete.js",
    "bfcli": "dist/cli.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "copy-templates": "copyfiles -u templates/*.ejs dist/templates",
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "yarn run copy-templates && tsup",
    "dev": "tsx --tsconfig src/tsconfig.json src/bin/cli.ts",
    "postinstall": "bfcli install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": false
  },
  "dependencies": {
    "@bastion-falls/types": "workspace:*",
    "@stricli/auto-complete": "^1.1.2",
    "@stricli/core": "^1.1.2",
    "ejs": "^3.1.10",
    "env-paths": "^3.0.0",
    "esm-path": "^1.0.1",
    "github-slugger": "^2.0.0",
    "glob": "^11.0.2",
    "js-yaml": "^4.1.0",
    "minimatch": "^10.0.1",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx": "^3.1.0",
    "remark-stringify": "^11.0.0",
    "tinyglobby": "^0.2.13",
    "vfile": "^6.0.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/mdast": "^4.0.4",
    "@types/node": "~20.17.46",
    "copyfiles": "^2.4.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "5.6.3",
    "unist-util-visit": "^5.0.0"
  },
  "volta": {
    "extends": "../package.json"
  }
}
