{
  "name": "@bastion-falls/cli",
  "author": "",
  "description": "Stricli command line application",
  "license": "MIT",
  "type": "module",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "bin": {
    "cli": "dist/cli.js",
    "__cli_bash_complete": "dist/bash-complete.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "copy-templates": "copyfiles -u 2 src/templates/*.ejs dist/templates",
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "pnpm run copy-templates && tsup",
    "dev": "tsup --watch src --onSuccess 'pnpm run copy-templates'",
    "postinstall": "cli install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": false
  },
  "dependencies": {
    "@stricli/auto-complete": "^1.1.2",
    "@stricli/core": "^1.1.2",
    "copyfiles": "^2.4.1",
    "ejs": "^3.1.10",
    "eta": "^3.5.0",
    "github-slugger": "^2.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "20.x",
    "tsup": "^6.7.0",
    "typescript": "5.6.3"
  }
}