---
import PanZoom, { Element } from "@sasza/react-panzoom";
import type { ImageMetadata } from "astro";

interface Props {
  asset: ImageMetadata;
  alt: string;
}

const { asset, alt } = Astro.props;
---

<div class="family-tree-container">
  <PanZoom
    zoomInitial={1}
    zoomMax={10}
    zoomMin={1}
    client:load
    className="panzoom-container"
  >
    <Element id="tree" className="tree-element">
      <img src={asset.src} alt={alt} class="svg-image" />
    </Element>
  </PanZoom>
</div>

<style>
  .family-tree-container {
    height: 30rem;
    width: 100%;
    position: relative;
  }

  .panzoom-container {
    width: 100%;
    height: 100%;
  }

  .tree-element {
    width: 100%;
    height: 100%;
  }

  .svg-image {
    width: 100%;
    height: 100%;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    object-fit: contain;
  }
</style>
